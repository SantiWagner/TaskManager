<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="mySpinnerItemStyle">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:fontFamily">@font/work_sans_light</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/mainText</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="TitleBarTextAppearance" parent="AppTheme">
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>

    </style>

</resources>
